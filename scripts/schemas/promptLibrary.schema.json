{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Prompt library (promptLibrary.json)",
  "type": "object",
  "required": ["sections"],
  "properties": {
    "sections": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "items"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "title", "prompt"],
              "properties": {
                "id": { "type": "string" },
                "title": { "type": "string" },
                "goal": { "type": "string" },
                "logika": { "type": "string" },
                "prompt": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}
